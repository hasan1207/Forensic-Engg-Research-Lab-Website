<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Inpainting Tool</title>
  <%- include("partials/headerFiles") %>
</head>
<body class="bg-light">
  <%- include("partials/navBar") %>
  <div class="container py-4">
    <h1 class="text-center mb-4">Inpainting Tool</h1>

    <button class="btn btn-secondary position-absolute" style="top: 100px; right: 20px; z-index: 1100;" 
    type="button" data-bs-toggle="offcanvas" data-bs-target="#galleryOffcanvas" aria-controls="galleryOffcanvas" id="openGalleryBtn">
    
    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" stroke="white" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
      <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
      <circle cx="9" cy="9" r="2"></circle>
      <path d="M21 15l-5-5L5 21"></path>
  </svg>
  Open Gallery
    </button>
    

    <div class="mb-3 text-center">
      <input type="file" id="imageUpload" accept="image/*" class="form-control w-50 mx-auto">
    </div>

    <%- include("partials/modelStatus") %>

    
    <div class="control-section">
      <div class="row">
       
        <div class="col-md-6">
          <label for="prompt" class="form-label">Prompt:</label>
          <input type="text" id="prompt" class="form-control" placeholder="Enter prompt text">
        </div>
    
        
        <div class="col-md-6">
          <label for="loraModel" class="form-label">Select LoRa Model:</label>
          <select id="loraModel" class="form-select">
            <option value="" data-img="">No LoRa Model</option>
            <option value="orange pot" data-img="/images/pot.jpeg">Orange Pot</option>
            <option value="kettle" data-img="/images/flask.jpeg">Flask</option>
            <option value="vase" data-img="/images/vase.jpeg">Vase</option>
          </select>
      
          
          <div id="loraPreviewContainer" class="mt-2">
            <img id="loraPreview" src="" alt="Selected Model Preview" class="img-fluid d-none" style="max-height: 80px; border-radius: 10px;">
          </div>
        </div>
    
      <div class="row mt-3">
       
        <div class="col-md-6">
          <label for="inpaintingFill" class="form-label">Inpainting Fill Mode:</label>
          <select id="inpaintingFill" class="form-select">
            <option value="0" selected>Fill masked area</option>
            <option value="1">Original content</option>
            <option value="2">Latent noise</option>
            <option value="3">Latent nothing</option>
          </select>
        </div>


        <div class="col-md-6 d-none" id="loraWeightContainer">

          <div class="">
            <label for="loraWeight" class="form-label">LoRa Model Weight (Optional):</label>
            <input type="number" id="loraWeight" class="form-control" min="0" max="5" step="0.1" value="1.4" placeholder="Enter weight (0-5)">
          </div>
        </div>

      </div>
    </div>
      

    </div>

    

  <div class="img-con">
    <div id="imageContainer" class="canvas-image-container">
      <img id="generatedImg" class="gen-img" src="/images/checkers.jpg" alt="Uploaded Image">
      <canvas id="maskCanvas"></canvas>
      

      <%- include("partials/progressRing") %>
      <%- include("partials/saveIcon") %>
      

  </div>
  </div>

  

    <div id="controls" class="d-flex justify-content-center gap-3">
      <button id="clearMask" class="btn btn-secondary">Clear Mask</button>
      <button id="submitMask" class="btn btn-primary">Inpaint</button>
    </div>


  </div>




<div class="offcanvas offcanvas-end" tabindex="-1" id="galleryOffcanvas" aria-labelledby="galleryOffcanvasLabel" style="z-index: 1101;">
<div class="offcanvas-header">
<h5 class="offcanvas-title" id="galleryOffcanvasLabel">Select an Image</h5>
<button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
</div>
<div class="offcanvas-body">

<div id="galleryThumbnails" class="d-flex flex-wrap gap-3">

</div>
</div>
</div>

  <%- include("partials/footer") %>
  <%- include("partials/codeFiles") %>
 
  
</body>
</html>